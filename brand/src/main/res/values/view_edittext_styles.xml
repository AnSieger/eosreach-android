<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextPrimary" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/view_edittext_primary_background</item>
        <item name="android:textColor">@color/viewEditTextPrimaryTextColor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="TextInputLayoutPrimary">
        <item name="android:textColorHint">@color/viewTextInputLayoutPrimaryHint</item>
        <item name="hintTextAppearance">@style/TextInputLayoutPrimaryHintTextAppearance</item>
        <item name="errorTextAppearance">@style/TextInputLayoutPrimaryErrorTextAppearance</item>
    </style>

    <style name="TextInputLayoutPrimaryHintTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/typographyColorPrimary</item>
        <item name="android:textSize">@dimen/typography_body_14</item>
    </style>

    <style name="TextInputLayoutPrimaryErrorTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/viewEditTextPrimaryErrorTextColor</item>
        <item name="android:textSize">@dimen/typography_caption_12</item>
    </style>

</resources>