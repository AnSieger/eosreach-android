<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Typography.Medium" parent="@style/Base.TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/typography_medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Typography.H4" parent="@style/Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/typography_h4</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Typography.H5" parent="@style/Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/typography_h5</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Typography.H6" parent="@style/Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/typography_h6</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Typography.Body1" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/typography_body1</item>
    </style>

    <style name="Typography.Caption" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/typography_caption</item>
    </style>

    <style name="Typography.Data" parent="Typography.Body1">
        <item name="android:textColor">@color/typographyColorInverse</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:background">@drawable/typography_data_background_rounded</item>
        <item name="android:lineSpacingExtra">@dimen/typography_data_line_height</item>
    </style>
    
</resources>