<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextTransparent" parent="EditTextPrimary">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="EditTextPrimary" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/view_edittext_primary_background</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingEnd">@dimen/padding_medium</item>
        <item name="android:layout_marginTop">@dimen/padding_small</item>
    </style>

</resources>