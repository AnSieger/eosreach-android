<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextPrimary" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/view_edittext_primary_background</item>
        <item name="android:textColor">@color/viewEditTextPrimaryTextColor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

</resources>