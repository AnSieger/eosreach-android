<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonPrimary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/view_button_primary_background</item>
        <item name="android:textColor">@color/viewButtonPrimaryText</item>
        <item name="android:minWidth">@dimen/viewButtonMinWidth</item>
        <item name="android:minHeight">@dimen/viewButtonMinHeight</item>
        <item name="android:paddingStart">@dimen/viewButtonHorizontalPadding</item>
        <item name="android:paddingEnd">@dimen/viewButtonHorizontalPadding</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/view_button_secondary_background</item>
        <item name="android:textColor">@color/viewButtonSecondaryText</item>
        <item name="android:minWidth">@dimen/viewButtonMinWidth</item>
        <item name="android:minHeight">@dimen/viewButtonMinHeight</item>
        <item name="android:paddingStart">@dimen/viewButtonHorizontalPadding</item>
        <item name="android:paddingEnd">@dimen/viewButtonHorizontalPadding</item>
    </style>

    <style name="ButtonTransparent" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/view_button_transparent_background</item>
        <item name="android:textColor">@color/viewButtonTransparentText</item>
        <item name="android:minWidth">@dimen/viewButtonMinWidth</item>
        <item name="android:minHeight">@dimen/viewButtonMinHeight</item>
        <item name="android:paddingStart">@dimen/viewButtonHorizontalPadding</item>
        <item name="android:paddingEnd">@dimen/viewButtonHorizontalPadding</item>
    </style>

    <style name="ItemButtonTransparent" parent="ButtonTransparent">
        <item name="android:background">@drawable/view_button_transparent_background</item>
        <item name="android:textColor">@color/viewButtonTransparentText</item>
        <item name="android:minWidth">@dimen/viewButtonMinWidth</item>
        <item name="android:minHeight">@dimen/viewButtonMinHeight</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingEnd">@dimen/padding_medium</item>
    </style>

    <style name="ButtonPreference" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:drawableEnd">@drawable/typography_preference_arrow</item>
        <item name="android:background">@drawable/view_button_preference_background_ripple</item>
        <item name="android:textColor">@color/typographyColorSecondary</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">@dimen/padding_large</item>
        <item name="android:paddingEnd">@dimen/padding_large</item>
    </style>

</resources>