<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_middle_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <com.memtrip.eosreach.brand.ReachTextView
        android:id="@+id/issue_create_account_resource_allocation_title"
        style="@style/Typography.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingRight="@dimen/padding_medium"
        android:text="@string/issue_create_account_resource_allocation_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.memtrip.eosreach.brand.ReachTextView
        android:id="@+id/issue_create_account_resource_allocation_cpu_label"
        style="@style/Typography.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_medium"
        android:textAllCaps="true"
        android:text="@string/issue_create_account_resource_allocation_cpu_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/vertical_middle_guideline"
        app:layout_constraintTop_toBottomOf="@id/issue_create_account_resource_allocation_title" />

    <com.memtrip.eosreach.brand.ReachTextView
        android:id="@+id/issue_create_account_resource_allocation_net_label"
        style="@style/Typography.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_medium"
        android:textAllCaps="true"
        android:text="@string/issue_create_account_resource_allocation_net_label"
        app:layout_constraintLeft_toLeftOf="@id/vertical_middle_guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/issue_create_account_resource_allocation_title" />

    <com.memtrip.eosreach.brand.ReachTextView
        android:id="@+id/issue_create_account_resource_allocation_cpu_value"
        style="@style/Typography.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_medium"
        android:background="@drawable/view_button_transparent_background"
        android:gravity="center"
        android:padding="@dimen/padding_medium"
        android:textAllCaps="true"
        android:text="@string/issue_create_account_resource_allocation_cpu_value"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/vertical_middle_guideline"
        app:layout_constraintTop_toBottomOf="@id/issue_create_account_resource_allocation_cpu_label" />

    <com.memtrip.eosreach.brand.ReachTextView
        android:id="@+id/issue_create_account_resource_allocation_net_value"
        style="@style/Typography.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_medium"
        android:background="@drawable/view_button_transparent_background"
        android:gravity="center"
        android:padding="@dimen/padding_medium"
        android:textAllCaps="true"
        android:text="@string/issue_create_account_resource_allocation_net_value"
        app:layout_constraintLeft_toLeftOf="@id/vertical_middle_guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/issue_create_account_resource_allocation_net_label" />


</androidx.constraintlayout.widget.ConstraintLayout>
