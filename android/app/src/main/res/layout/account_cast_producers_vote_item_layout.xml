<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/padding_large">

    <com.memtrip.eosreach.brand.ReachEditText
        android:id="@+id/cast_producers_vote_blockproducer_name_input"
        style="@style/EditTextPrimary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_medium"
        android:layout_marginEnd="@dimen/padding_medium"
        android:hint="@string/vote_cast_block_producer_name_hint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cast_producers_vote_endpoint_block_producer"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <com.memtrip.eosreach.brand.ReachButton
        android:id="@+id/cast_producers_vote_endpoint_block_producer"
        style="?button_transparent_caption"
        android:layout_width="@dimen/account_cast_producers_vote_item_button_width"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_medium"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:text="@string/vote_cast_producers_vote_remove_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cast_producers_vote_blockproducer_name_input"
        app:layout_constraintBottom_toBottomOf="@+id/cast_producers_vote_blockproducer_name_input"/>

</androidx.constraintlayout.widget.ConstraintLayout>
